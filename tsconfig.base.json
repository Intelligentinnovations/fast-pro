{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend-template/database": ["libs/database/src/index.ts"],
      "@backend-template/graphql-server": ["libs/graphql-server/src/index.ts"],
      "@backend-template/guard": ["libs/src/index.ts"],
      "@backend-template/helpers": ["libs/helpers/src/index.ts"],
      "@backend-template/http": ["libs/http/src/index.ts"],
      "@backend-template/messaging": ["libs/messaging/src/index.ts"],
      "@backend-template/microservice": ["libs/microservice/src/index.ts"],
      "@backend-template/rest-server": ["libs/rest-server/src/index.ts"],
      "@backend-template/secrets": ["libs/secrets/src/index.ts"],
      "@backend-template/types": ["libs/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
